<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/activitymain"
    >

    <TextView
        android:id="@+id/topleft"
        android:layout_width="@dimen/boxs"
        android:layout_height="@dimen/boxs"
        android:text="@string/top_left"
        android:tag="topleft"
        android:gravity="center"
        android:textSize="@dimen/fontsize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/topright"
        android:layout_width="@dimen/boxs"
        android:layout_height="@dimen/boxs"
        android:text="@string/top_right"
        android:tag="topright"
        android:gravity="center"
        android:textSize="@dimen/fontsize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottomleft"
        android:layout_width="@dimen/boxs"
        android:layout_height="@dimen/boxs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:tag="bottomleft"
        android:textSize="@dimen/fontsize"
        android:text="@string/bottom_left"
        android:textAllCaps="false"
        android:gravity="center"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottomright"
        android:layout_width="@dimen/boxs"
        android:layout_height="@dimen/boxs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:tag="bottomright"
        android:textSize="@dimen/fontsize"
        android:text="@string/bottom_right"
        android:textAllCaps="false"
        android:gravity="center"
        />
    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:min="5"
        android:max="100"
        android:progress="30"
        android:progressTint="@color/teal_200"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>